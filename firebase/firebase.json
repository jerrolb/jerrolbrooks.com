{
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/games/**",
        "destination": "/",
        "type": 302
      }
    ],
    "rewrites": [
      { "source": "/api/textQuery", "function": "textQuery" },
      { "source": "/api/hello", "function": "hello" }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
